<% if (theme.stylesheets) { %>
    <% theme.stylesheets.forEach(url => { %>
        <%- (url.startsWith('http://') || url.startsWith('https://') || url.startsWith('//')) ? `<link href="${url}" rel="stylesheet">` : css(url) %>
    <% }); %>
<% } %>

<style>
    * {
        --sidebar-image: url(<%= theme.uiux.sidebar_image %>);
        --sidebar-image-color: <%=theme.uiux.sidebar_image_color %>;
        --banner-image: url(<%= theme.uiux.banner_image %>);
        --banner-image-color: <%=theme.uiux.banner_image_color %>;
        --post-thumbnail-color: <%=theme.uiux.post_thumbnail_color %>;
        --copy-code-btn-color: <%=theme.uiux.copy_code_button_color %>;
    }
</style>
